SHELL = /bin/sh
VPATH = @srcdir@

subdirs = @subdirs@
top_srcdir = @top_srcdir@
srcdir = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = $(exec_prefix)/bin
infodir = $(prefix)/info
libdir = $(prefix)/lib/gnudl
mandir = $(prefix)/man/man1

CC = @CC@
CXX = @CXX@
CPPFLAGS = @CPPFLAGS@
CFLAGS = $(CPPFLAGS) @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
#INSTALL = @INSTALL@
INSTALL = install
CP = cp
CHMOD = chmod

SOURCES=Sounds.cpp Pacman.cpp Main.cpp Log.cpp Ghost.cpp Game.cpp BckgrObj.cpp App.cpp Draw.cpp GameState.cpp PacmanState.cpp GhostState.cpp PlayerState.cpp Node.cpp Object.cpp Constants.cpp
OBJECTS=Sounds.o Pacman.o Main.o Log.o  Ghost.o Game.o BckgrObj.o App.o Draw.o GameState.o PacmanState.o GhostState.o PlayerState.o Node.o Object.o Constants.o
EXECUTABLE=pacman_sdl

all: 
	$(CXX) -g -std=c++11 -c `sdl-config --cflags` $(SOURCES) 
	$(CXX) `sdl-config --libs` $(LIBS)  $(OBJECTS) -o $(EXECUTABLE)

clean:
	rm -f $(OBJECTS)

install:
	mkdir -p $(DESTDIR)/usr/bin/
	mkdir -p $(DESTDIR)/usr/share/applications/
	mkdir -p $(DESTDIR)/usr/share/pacman_sdl/levels

	$(INSTALL) -m644 pacman_sdl.desktop $(DESTDIR)/usr/share/applications/
	$(INSTALL) -m755 pacman_sdl $(DESTDIR)/usr/bin/
	$(INSTALL) -m644 ../icon.png $(DESTDIR)/usr/share/pacman_sdl/
	$(INSTALL) -m644 ../arial.ttf $(DESTDIR)/usr/share/pacman_sdl/
	$(INSTALL) -m644 ../settings.conf $(DESTDIR)/usr/share/pacman_sdl/

	$(CP) -r ../levels/ $(DESTDIR)/usr/share/pacman_sdl
	$(CP) -r ../skins/ $(DESTDIR)/usr/share/pacman_sdl
	$(CP) -r ../sound/ $(DESTDIR)/usr/share/pacman_sdl
	
	$(CHMOD) 666 $(DESTDIR)/usr/share/pacman_sdl/levels/*/hscore
