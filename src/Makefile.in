SHELL = /bin/sh
VPATH = @srcdir@

subdirs = @subdirs@
top_srcdir = @top_srcdir@
srcdir = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = $(exec_prefix)/bin
infodir = $(prefix)/info
libdir = $(prefix)/lib/gnudl
mandir = $(prefix)/man/man1

CC = @CC@
CXX = @CXX@
CPPFLAGS = @CPPFLAGS@
CFLAGS = $(CPPFLAGS) @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
CP = cp
CHMOD = chmod

SOURCES=DefaultSounds.cpp Pacman.cpp Main.cpp Log.cpp Ghost.cpp Game.cpp BckgrObj.cpp App.cpp Draw.cpp GameState.cpp PacmanState.cpp GhostState.cpp PlayerState.cpp Node.cpp Object.cpp Constants.cpp Nodes.cpp GhostNodes.cpp PacmanNodes.cpp
OBJECTS=DefaultSounds.o Pacman.o Main.o Log.o  Ghost.o Game.o BckgrObj.o App.o Draw.o GameState.o PacmanState.o GhostState.o PlayerState.o Node.o Object.o Constants.o Nodes.o GhostNodes.o PacmanNodes.o
EXECUTABLE=pacman_sdl

all: 
	$(CXX) -pipe -g -std=c++11 -c `sdl-config --cflags` $(SOURCES) 
	$(CXX) `sdl-config --libs` $(LIBS)  $(OBJECTS) -o $(EXECUTABLE)

clean:
	rm -f $(OBJECTS)

